<div class="padding_fifty"></div>
<div class="container">
	<div class="about_comapny_titles">
		<%= @event.event_company_name %>ってどんな会社？
	</div><br>
	<div class="padding_fifty"></div>
	<div class="row">
		<!-- <div class="col-lg-1"></div> -->
		<div class="col-lg-6 about_com_details_font color-white padding-20">
			<%= @event.event_description %>
		</div>
		<div class="col-lg-6">
			<% if @event.event_top_image.attached? %>
			    <%= image_tag @event.event_top_image ,class: "about_company_img"%>
			<% end %>
		</div>
	</div>
	<div class="padding_fifty"></div>
	<div class="about_comapny_titles">
		登壇者情報
	</div>
	<div class="padding_fifty"></div>
	<div class="row">
		<div class="col-lg-8 about_com_details_font">
			<div class="row">
				<div class="col-lg-4 about_com_font">[企業名]</div>
				<div class="col-lg-8">
					<b><%= @event.event_company_name %></b>
				</div>
				<div class="col-lg-4 about_com_font">[役職]</div>
				<div class="col-lg-8">
					<b>				
						<%= @event.position %>
					</b>
				</div>
				<div class="col-lg-4 about_com_font">[登壇者]</div>
				<div class="col-lg-8">
					<b>				
					<%= @event.event_president %>氏
					</b>
				</div>
				<div class="col-lg-4 about_com_font">[生年月日]</div>
				<div class="col-lg-8">
					<b>
						<%= @event.event_president_birth_day %>
					</b>
				</div>
				<% if @event.event_motto != "" %>
				<div class="col-lg-4 about_com_font">[座右の銘]</div>
				<div class="col-lg-8">
					<b>
					<%= @event.event_motto %>	
					</b>				
				</div>
				<% end %>
			</div>
		</div>
		<div class="col-lg-4">
			<% if @event.president_image.attached? %>
			    <%= image_tag @event.president_image ,class: "about_com_img"%>
			<% end %>
		</div>
	</div>
	<div class="about_comapny_titles">
		コンテンツ
	</div>
	<div class="padding_fifty"></div>
	<div class="event_content_font aligen_center">
		<% if !@event.content_one.nil?%>
			1.<%= @event.content_one %><br>
		<% end %>
		<% if !@event.content_two.nil?%>
			2.<%= @event.content_two %><br>
		<% end %>
		<% if !@event.content_three.nil?%>
			3.<%= @event.content_three %><br>
		<% end %>
		<% if !@event.content_four.nil?%>
			4.<%= @event.content_four %><br>
		<% end %>
		<% if !@event.content_five.nil?%>
			5.<%= @event.content_five %><br>
		<% end %>
	</div>
</div>