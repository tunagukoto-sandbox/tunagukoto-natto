						<!-- <div style="margin: 0 auto;"> -->
						<a href="https://www.aichi-student-brand.com/">
							<%= image_tag'natto_bana.png',class: "aichi_brand_img" %>
						</a>
					</div>
				</div>

				<div class="container-fluid">

					<div class="top_titles">
						<h5 class="recommend_event_tag">Nattoおすすめイベント</h5>
						<div class="row top-title-inner">
							<% @events.each do |e| %>
							<%= link_to event_path(e.id) do %>			
							<div style="margin: 2px;">					
							<div class="card-deck">
								<div class="card" style="width: 18rem; min-height:22rem ;">
									<div>
										<% if e.event_top_image.attached? %>
											<%= image_tag e.event_top_image ,class: "card-img" %>
										<% end %>
							    	</div>

								  	<div class="card-body">
