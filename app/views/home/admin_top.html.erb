				<table class="table">
				    <tbody>
				        <tr>
				        	<td><%= q.company_name %></td>
				        	<td><%= q.title %></td>
 							<td><%= q.uuid %></td>
 							<td><%= q.gift %></td>
 							<td><%= q.dead_line %></td>
				        </tr>
				    </tbody>
				</table>
			</div>
		<div class="col-sm-2 col-md-2"></div>
		<% end %>
	</div>
